<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="it.playfellas.superapp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:name="it.playfellas.superapp.SuperAppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="landscape"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.master.GameActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.slave.SlaveActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.master.MasterActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".ui.DeviceListActivity">
        </activity>
        <activity
            android:name=".ui.master.BluetoothActivity"
            android:label="@string/title_activity_bluetooth">
        </activity>
    </application>

</manifest>
