<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="it.playfellas.superapp.ui.slave.game1.SlaveGame1Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slave game 1"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photoImageView"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="46dp"
        android:src="@mipmap/ic_launcher"
        app:border_color="#5490cc"
        app:border_width="1dp"/>

    <RelativeLayout
        android:id="@+id/upConveyor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginRight="-100dp"
        android:background="#000000"
        android:layout_marginBottom="129dp"
        android:layout_below="@+id/photoImageView"
        android:layout_marginTop="129dp"/>

    <RelativeLayout
        android:id="@+id/downConveyor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginRight="-100dp"
        android:background="#555555"
        android:layout_alignStart="@+id/upConveyor"
        android:layout_below="@+id/upConveyor"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
