<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/_background_normal"
                tools:context="it.playfellas.superapp.ui.slave.game2.SlaveGame2Fragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photoImageView"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="46dp"
        android:src="@drawable/_circular_photo_normal"
        app:border_color="@color/normal_photo_border"
        app:border_width="1dp"/>

    <RelativeLayout
        android:id="@+id/upConveyor"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginRight="-100dp"
        android:background="#000000"
        android:layout_below="@+id/photoImageView"
        android:layout_marginTop="129dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/slot1ImageView"
            android:src="@drawable/quadrato"
            android:layout_marginStart="239dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/slot2ImageView"
            android:src="@drawable/quadrato"
            android:layout_marginStart="98dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/slot1ImageView"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/slot3ImageView"
            android:src="@drawable/quadrato"
            android:layout_marginEnd="120dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/slot4ImageView"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/slot4ImageView"
            android:src="@drawable/quadrato"
            android:layout_marginEnd="224dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/downConveyor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginRight="-100dp"
        android:background="#555555"
        android:layout_below="@+id/upConveyor"
        android:layout_alignStart="@+id/upConveyor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"/>


</RelativeLayout>
