<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:width="300dp"
                android:height="300dp">
                <shape android:shape="rectangle">
                    <solid
                        android:color="@color/btn_pressed"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/btn_button_border_pressed"/>
                    <corners
                        android:radius="80dp"/>
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
            <item
                android:width="236dp"
                android:height="161dp"
                android:drawable="@drawable/_game_img_inside_button"
                android:left="22dp"
                android:top="60dp">
            </item>
            <item
                android:width="40dp"
                android:height="40dp"
                android:left="200dp"
                android:top="200dp">
                <shape android:shape="oval">
                    <solid
                        android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:width="300dp"
                android:height="300dp">
                <shape android:shape="rectangle">
                    <solid
                        android:color="@color/btn_normal_disabled"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/btn_button_border_disabled"/>
                    <corners
                        android:radius="80dp"/>
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp"/>
                </shape>
            </item>
            <item
                android:width="236dp"
                android:height="161dp"
                android:drawable="@drawable/_game_img_inside_button"
                android:left="22dp"
                android:top="60dp">
            </item>
            <item
                android:width="40dp"
                android:height="40dp"
                android:left="200dp"
                android:top="200dp">
                <shape android:shape="oval">
                    <solid
                        android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item
                android:width="300dp"
                android:height="300dp">
                <shape android:shape="rectangle">
                    <solid
                        android:color="@color/btn_normal"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/btn_button_border_normal"/>
                    <corners
                        android:radius="80dp"/>
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp"/>
                    <size
                        android:width="400dp"
                        android:height="400dp"/>
                </shape>
            </item>
            <item
                android:width="236dp"
                android:height="161dp"
                android:drawable="@drawable/_game_img_inside_button"
                android:left="22dp"
                android:top="60dp">
            </item>
            <item
                android:width="40dp"
                android:height="40dp"
                android:left="20dp"
                android:top="20dp">
                <shape android:shape="oval">
                    <solid
                        android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>