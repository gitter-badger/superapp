<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="@color/generic_pressed" />
      <stroke
          android:width="2dp"
          android:color="@color/generic_button_border_pressed" />
      <corners
          android:radius="40dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
   <item android:state_enabled="false" >
    <shape>
      <solid
          android:color="@color/generic_normal_disabled" />
      <stroke
          android:width="2dp"
          android:color="@color/generic_button_border_disabled" />
      <corners
          android:radius="40dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
        <solid
          android:color="@color/generic_normal" />
      <stroke
          android:width="2dp"
          android:color="@color/generic_button_border" />
      <corners
          android:radius="40dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>

</selector>